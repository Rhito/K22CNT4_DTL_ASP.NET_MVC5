<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - lab01_lesson01</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lab01_lesson01.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="ps-4 d-flex align-items-center" style="background-color:#e1c9c9">
            @Html.ActionLink("Trang chủ", "Index", "Home", null, new { @class = "navbar-brand" })
            
            @Html.ActionLink("Giới thiệu", "About", "Home", null, new { @class = "navbar-brand" })
            <hr />
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="ps-4 border-top footer text-muted">
        <footer>
            <p>&copy; @DateTime.Now.Year - Phòng chuyên môn Devmaster</p>
        </footer>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
